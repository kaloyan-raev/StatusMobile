<?xml version='1.0' encoding='utf-8'?>
<widget id="com.statusmobile.id" version="0.0.1"
	xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>StatusMobile</name>

	<description>
		A sample mobile app consuming a REST service
	</description>

	<author email="studio-feedback@zend.com " href="http://www.zend.com/en/products/studio">
		Zend Studio Team
	</author>

	<content src="index.html" />

	<access origin="*" />
	<preference name="fullscreen" value="true" />
	<preference name="webviewbounce" value="false" />
	<engine name="android" version="4.1.1" />
	<feature name="NetworkStatus">
		<param name="android-package"
			value="org.apache.cordova.networkinformation.NetworkManager" />
	</feature>
	<feature name="Device">
		<param name="android-package" value="org.apache.cordova.device.Device" />
	</feature>
</widget>